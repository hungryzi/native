%h3.header Read Something

.row-fluid
  %form{ method: 'POST' }
    %fieldset
      %textarea{ name: 'text', placeholder: "paste the text you're gonna read here..." }= @text
      %br
      %button{ type: 'submit', class: 'btn' } Process

.row-fluid
  %ul.words.span3
    - @sorted.each do |word, occurrence_count|
      %li.word
        %span.text= word
        %span.count= occurrence_count

  %span.definition.span8


